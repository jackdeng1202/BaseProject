<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="15dp"
              android:paddingRight="5dp"
              android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="30dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="用户名"/>

        <EditText
            android:inputType="phone"
            android:id="@+id/et_act_login_phonenum"
            android:layout_gravity="center"
            android:paddingLeft="4dp"
            android:layout_margin="4dp"
            android:background="@drawable/et_border"
            android:hint="请输入手机号"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textSize="18sp"
            android:singleLine="true"
            android:layout_height="match_parent"/>

        <Button
            android:id="@+id/bt_act_login_getcode"
            android:gravity="center"
            android:paddingLeft="1dp"
            android:paddingRight="1dp"
            android:textSize="16sp"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:text="获取验证码"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="验证码"/>

        <EditText
            android:singleLine="true"
            android:inputType="number"
            android:id="@+id/et_act_login_code"
            android:textSize="18sp"
            android:paddingLeft="4dp"
            android:layout_margin="4dp"
            android:background="@drawable/et_border"
            android:hint="请输入验证码"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:visibility="invisible"
        android:id="@+id/ll_act_login_platemodule"
        >

        <TextView
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="车牌号"/>

        <Button
            android:id="@+id/bt_act_login_platetitle"
            android:gravity="center"
            android:text="粤A"
            android:drawableRight="@drawable/icon_geo"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

        <EditText
            android:singleLine="true"
            android:id="@+id/et_act_login_platenum"
            android:paddingLeft="4dp"
            android:textSize="18sp"
            android:layout_margin="4dp"
            android:background="@drawable/et_border"
            android:hint="请输入车牌号"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <Button
        android:id="@+id/bt_act_login_login"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:layout_marginTop="80dp"
        android:text="登录"
        android:background="@drawable/bt_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>